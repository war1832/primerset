<%= render "partials/navigation" %>

<!-- Page Content -->
<div id="page-wrapper">
	<div class="container-fluid">
		<div class="row">
			<div class="col-lg-12">
				<h1 class="page-header">Listado de Tipos de canchas</h1>

				<div class="panel panel-default">
					<div class="panel-heading">
						Tipos de canchas
					</div>
					<!-- /.panel-heading -->
					<div class="panel-body">
						<div class="table-responsive">

						</div>
						<table class="table">
							<thead>
								<tr>
									<th>#</th>
									<th>Descripcion</th>
									<th colspan="3" class="text-center">Acciones</th>
								</tr>
							</thead>

							<tbody>
								<% @tipo_canchas.each do |tipo_cancha| %>
								<tr>
									<td><%= tipo_cancha.id %></td>
									<td><%= tipo_cancha.descripcion %></td>
									<td><%= link_to '<i class="fa fa-user fa-fw"></i> Mostrar'.html_safe, tipo_cancha %></td>
									<td><%= link_to '<i class="fa fa-edit fa-fw"></i> Editar'.html_safe, edit_tipo_cancha_path(tipo_cancha) %></td>
									<td><%= link_to '<i class="fa fa-remove fa-fw"></i> Eliminar'.html_safe, tipo_cancha, method: :delete, data: { confirm: 'Are you sure?' } %></td>
								</tr>
								<% end %>
							</tbody>
						</table>

						<br>

					</div>
					<!-- /.panel-body -->
				</div>
				<!-- /.panel -->
			</div>
			<!-- /.col-lg-12 -->
		</div>
		<!-- /.row -->
	</div>
	<!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->

