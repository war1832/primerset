<p id="notice"><%= notice %></p>

<h1>Listing Tipo Clientes</h1>

<table>
  <thead>
    <tr>
      <th>Descripcion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tipo_clientes.each do |tipo_cliente| %>
      <tr>
        <td><%= tipo_cliente.descripcion %></td>
        <td><%= link_to 'Show', tipo_cliente %></td>
        <td><%= link_to 'Edit', edit_tipo_cliente_path(tipo_cliente) %></td>
        <td><%= link_to 'Destroy', tipo_cliente, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

