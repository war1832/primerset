<p id="notice"><%= notice %></p>

<h1>Listing Reservas</h1>

<table>
  <thead>
    <tr>
      <th>Cliente</th>
      <th>Cancha</th>
      <th>Fecha inicio</th>
      <th>Fecha fin</th>
      <th>Fecha baja</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservas.each do |reserva| %>
      <tr>
        <td><%= reserva.cliente %></td>
        <td><%= reserva.cancha %></td>
        <td><%= reserva.fecha_inicio %></td>
        <td><%= reserva.fecha_fin %></td>
        <td><%= reserva.fecha_baja %></td>
        <td><%= link_to 'Show', reserva %></td>
        <td><%= link_to 'Edit', edit_reserva_path(reserva) %></td>
        <td><%= link_to 'Destroy', reserva, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

