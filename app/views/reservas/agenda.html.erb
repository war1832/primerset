<%= render "partials/navigation" %>

    <!-- Page Content -->
    <div id="page-wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <h1>Agenda del dia</h1>

                    <hr />

                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            <h3 class="panel-title">Turnos Dados para el dia
                                <%= Date.today.strftime("%d/%m/%Y") %>
                            </h3>
                        </div>
                        <div class="panel-body">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Cliente</th>
                                        <th>Cancha</th>
                                        <th>Hora inicio</th>
                                        <th>Hora fin</th>
                                        <th colspan="3" class="text-center">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% @reservas.each do |reserva| %>
                                        <tr>
                                            <td>
                                                <%= reserva.cliente.nombre_y_apellido %>
                                            </td>
                                            <td>
                                                <%= reserva.cancha.descripcion_con_tipo %>
                                            </td>
                                            <td>
                                                <%= reserva.fecha_inicio.strftime "%H:%M" %>
                                            </td>
                                            <td>
                                                <%= reserva.fecha_fin.strftime "%H:%M" %>
                                            </td>
                                            <td>
                                                <%= link_to '<i class="fa fa-user fa-fw"></i> Mostrar'.html_safe, reserva %></td>
                                            <td>
                                                <%= link_to '<i class="fa fa-edit fa-fw"></i> Editar'.html_safe, edit_reserva_path(reserva) %></td>
                                            <td>
                                                <%= link_to '<i class="fa fa-remove fa-fw"></i> Eliminar'.html_safe, reserva, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                                        </tr>
                                        <% end %>
                                </tbody>
                            </table>
                        </div>
                    </div>


                    <div class="panel panel-danger">
                        <div class="panel-heading">
                            <h3 class="panel-title">Turnos Fijos para el dia
                                <%= Date.today.strftime("%d/%m/%Y") %>
                            </h3>
                        </div>
                        <div class="panel-body">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Cliente</th>
                                        <th>Cancha</th>
                                        <th>Hora inicio</th>
                                        <th>Hora fin</th>
                                        <th colspan="3" class="text-center">Acciones</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    <% @turnos_fijos.each do |turnos_fijo| %>
                                        <tr>
                                            <td>
                                                <%= turnos_fijo.cliente.nombre_y_apellido %>
                                            </td>
                                            <td>
                                                <%= turnos_fijo.cancha.descripcion_con_tipo %>
                                            </td>
                                            <td>
                                                <%= turnos_fijo.hora_inicio.strftime "%H:%M" %>
                                            </td>
                                            <td>
                                                <%= turnos_fijo.hora_fin.strftime "%H:%M" %>
                                            </td>
                                            <td>
                                                <%= link_to '<i class="fa fa-user fa-fw"></i> Mostrar'.html_safe, turnos_fijo %>
                                            </td>
                                            <td>
                                                <%= link_to '<i class="fa fa-edit fa-fw"></i> Editar'.html_safe, edit_turnos_fijo_path(turnos_fijo) %>
                                            </td>
                                            <td>
                                                <%= link_to '<i class="fa fa-remove fa-fw"></i> Eliminar'.html_safe, turnos_fijo, method: :delete, data: { confirm: 'Are you sure?' } %>
                                            </td>
                                        </tr>
                                        <% end %>
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>