<%= render "partials/navigation" %>
<!-- Page Content -->
<div id="page-wrapper">
	<div class="container-fluid">
		<div class="row">
			<div class="col-lg-12">
                <h1 class="page-header">Consulta de agenda</h1>

                <form action="<%= consultaagenda_path %>" method="POST" role="form">
                
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Seleccion del dia:</label>
                        <div class="col-sm-4">
                            <input name="date" value="<%=@today.strftime("%Y-%m-%d") %>" type="date" class="form-control" id="date">
                        </div>
                    </div>
                
                    <button type="submit" class="btn btn-primary">Buscar</button>
                </form>
            </div>
        </div>
    </div>
</div>