<div class="form-group">
	<%= f.label :TipoCancha_id , class: "col-sm-2 control-label" %>
	<div class="col-sm-4">
		<%= f.collection_select :TipoCancha_id, TipoCancha.order(:id),:id, :descripcion, {} ,{ include_blank: false, class: "form-control" } %>
	</div>
</div>
<div class="form-group">
	<div class="col-sm-offset-2 col-sm-6">
		<%= f.submit "Enviar" , class: "btn btn-primary"  %>
	</div>
</div>
<% end %>
