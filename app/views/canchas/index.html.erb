<%= render "partials/navigation" %>

<!-- Page Content -->
<div id="page-wrapper">
	<div class="container-fluid">
		<div class="row">
			<div class="col-lg-12">
				<h1 class="page-header">Listado de Canchas</h1>

				<div class="panel panel-default">
					<div class="panel-heading">
						Clientes
					</div>
					<!-- /.panel-heading -->
					<div class="panel-body">
						<div class="table-responsive">

							<table class="table">
								<thead>
									<tr>
										<th>#</th>
										<th>Nombre</th>
										<th>Descripcion</th>
										<th colspan="3" class="text-center">Acciones</th>
									</tr>
								</thead>
								<tbody>

									<% @canchas.each do |cancha| %>
									<tr>
										<td><%= cancha.id %></td>
										<td><%= cancha.name %></td>
										<td><%= cancha.TipoCancha.descripcion %></td>
										<td><%= link_to '<i class="fa fa-user fa-fw"></i> Mostrar'.html_safe, cancha %></td>
										<td><%= link_to '<i class="fa fa-edit fa-fw"></i> Editar'.html_safe, edit_cancha_path(cancha) %></td>
										<td><%= link_to '<i class="fa fa-remove fa-fw"></i> Eliminar'.html_safe, cancha, method: :delete, data: { confirm: 'Are you sure?' } %></td>
									</tr>
									<% end %>
								</tbody>
							</table>
						</div>

					</div>
					<!-- /.panel-body -->
				</div>
				<!-- /.panel -->
			</div>
			<!-- /.col-lg-12 -->
		</div>
		<!-- /.row -->
	</div>
	<!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->
