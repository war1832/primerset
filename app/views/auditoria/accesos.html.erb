<%= render "partials/navigation" %>

<!-- Page Content -->
<div id="page-wrapper">
	<div class="container-fluid">
		<div class="row">
			<div class="col-lg-12">
				<h1 class="page-header">Ultimos Accesos </h1>
				<div class="panel panel-default">
					<div class="panel-heading">
						Accesos
					</div>
					<!-- /.panel-heading -->
					<div class="panel-body">
						<div class="table-responsive">
							<table class="table">
								<thead>
									<tr>
										<th>Id</th>
										<th>Email</th>
										<th>Ultimo Acceso</th>
										<th>Ultima IP</th>
										<th>Cantida de Ingresos</th>
										<th>Es Admin?</th>
										<th>Perfil</th>
									</tr>
								</thead>
								<tbody>
									<% @usuarios.each do |usuario| %>
									<tr>
										<td><%= usuario.id %></td>
										<td><%= usuario.email %></td>
										<td><%= usuario.last_sign_in_at.strftime("%d/%m/%Y - %H:%M") if usuario.last_sign_in_at? %></td>
										<td><%= usuario.last_sign_in_ip %></td>
										<td><%= usuario.sign_in_count %></td>
										<td><%= usuario.admin? ? "Si" : "No" %></td>
										<td><%= link_to "Ver Perfil", user_admin_path(:id => usuario.id) , class: "btn btn-primary center" %></td>
									</tr>
									<% end %>
								</tbody>
							</table>
						</div>
						<!-- /.table-responsive -->
					</div>
					<!-- /.panel-body -->
				</div>
				<!-- /.panel -->
			</div>
			<!-- /.col-lg-12 -->
		</div>
		<!-- /.row -->
	</div>
	<!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->