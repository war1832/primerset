<%= render "partials/navigation" %> <!-- Page Content -->
<div id="page-wrapper">
	<div class="container-fluid">
		<div class="row">
			<div class="col-lg-12">
				<h1>Cancelacion de Turno Fijo</h1>
				<hr />
                <form action="<%= cancelarturnofijo_path %>" method="POST" role="form" class="form-horizontal">
                
                
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Turno Fijo</label>
                        <div class="col-sm-4">
                        <select name="turno" class="form-control" id="turnos_fijos">
			                <% @turnos_fijos.each do |item| %>
			                    <option value="<%= item.id %>"><%= item.descripcion %></option>
			                <% end %>
		                </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label">Dia</label>
                        <div class="col-sm-4">
                            <input type="date" name="date" class="form-control">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-2">
                            <button type="submit" class="btn btn-primary">Enviar</button>
                        </div>
                    </div>
                </form>
                
			</div>
		</div>
	</div>
</div>
<script>
	$( document ).ready(function() {
		$("#turnos_fijos" ).select2({
			theme: "bootstrap",
			language: "es"
		});
	});
</script>