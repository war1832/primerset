<%= form_for @turnos_fijo , :html => { :class => "form-horizontal" } do |f| %>

<% if @turnos_fijo.errors.any? %>
<div id="error_explanation">
	<h2><%= pluralize(@turnos_fijo.errors.count, "error") %> prohibited this turnos_fijo from being saved:</h2>

	<ul>
		<% @turnos_fijo.errors.full_messages.each do |message| %>
		<li>
			<%= message %>
		</li>
		<% end %>
	</ul>
</div>
<% end %>

<div class="form-group">
	<%= f.label :cliente_id, class: "col-sm-2 control-label" %>
	<div class="col-sm-4">
		<%= f.collection_select :cliente_id, Cliente.all , :id, :nombre_y_apellido %>
	</div>
</div>
<div class="form-group">
	<%= f.label :cancha_id, class: "col-sm-2 control-label"  %>
	<div class="col-sm-4">
		<%= f.collection_select :cancha_id, Cancha.all, :id, :descripcion_con_tipo, {} , { class: 'form-control'} %>
	</div>
</div>
<div class="form-group">
	<%= f.label :hora_inicio, class: "col-sm-2 control-label"  %>
	<div class="col-sm-4">
		<span style="display:inline-flex;">
			<%= f.time_select :hora_inicio , {time_separator: ''}, { class: 'form-control time'} %>
		</span>
	</div>
</div>
<div class="form-group">
	<%= f.label :hora_fin, class: "col-sm-2 control-label"  %>
	<div class="col-sm-4">
		<span style="display:inline-flex;">
			<%= f.time_select :hora_fin , {time_separator: ''}, { class: 'form-control time'} %>
		</span>
	</div>
</div>

<div class="form-group">
	<%= f.label :dia_semana, class: "col-sm-2 control-label"  %>
	<div class="col-sm-4">
		<select name="turnos_fijo[dia_semana]" class="form-control">
						<option value="1">Lunes</option>
						<option value="2">Martes</option>
						<option value="3">Miercoles</option>
						<option value="4">Jueves</option>
						<option value="5">Viernes</option>
						<option value="6">Sabado</option>
						<option value="0">Domingo</option>
		</select>

	</div>
</div>
<div class="form-group">
	<div class="col-sm-offset-2 col-sm-6">
		<%= f.submit "Enviar", class: "btn btn-primary" %>
	</div>
</div>
<% end %>
