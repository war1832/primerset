<%= render "partials/navigation" %>

<!-- Page Content -->
<div id="page-wrapper">
	<div class="container-fluid">
		<div class="row">
			<div class="col-lg-12">
				<h1 class="page-header">Listado de Turnos Fijos</h1>
				<div class="panel panel-default">
					<div class="panel-heading">
						Turnos Fijos
					</div>
					<!-- /.panel-heading -->
					<div class="panel-body">
						<div class="table-responsive">

							<table class="table">
								<thead>
									<tr>
										<th>Cliente</th>
										<th>Cancha</th>
										<th>Hora inicio</th>
										<th>Hora fin</th>
										<th>Dia semana</th>
										<th colspan="3"></th>
									</tr>
								</thead>

								<tbody>
									<% @turnos_fijos.each do |turnos_fijo| %>
									<tr>
										<td><%= "#{turnos_fijo.cliente.nombre}, #{turnos_fijo.cliente.apellido} "%></td>
										<td><%= "#{turnos_fijo.cancha.TipoCancha.descripcion} - #{turnos_fijo.cancha.descripcion}" %></td>
										<td><%= turnos_fijo.hora_inicio.strftime "%H:%M" %></td>
										<td><%= turnos_fijo.hora_fin.strftime "%H:%M" %></td>
										<td><%= Date::DAYS_INTO_WEEK.invert[turnos_fijo.dia_semana].capitalize %></td>
										<td><%= link_to 'Show', turnos_fijo %></td>
										<td><%= link_to 'Edit', edit_turnos_fijo_path(turnos_fijo) %></td>
										<td><%= link_to 'Destroy', turnos_fijo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
									</tr>
									<% end %>
								</tbody>
							</table>

						</div>
					</div>
					<!-- /.panel-body -->
				</div>
				<!-- /.panel -->
			</div>
			<!-- /.col-lg-12 -->
		</div>
		<!-- /.row -->
	</div>
	<!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->
