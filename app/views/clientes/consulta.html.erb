<%= render "partials/navigation" %>

<!-- Page Content -->
<div id="page-wrapper">
	<div class="container-fluid">
		<div class="row">
			<div class="col-lg-12">
				<h1 class="page-header">Listado de Clientes</h1>


									
					<form action="<%=consultacliente_path%>" method="POST" class="form-inline" role="form">
					
						<div class="form-group">
							<input type="text" name="filter" class="form-control" placeholder="Nombre o Apellido">
						</div>
					
						
					
						<button type="submit" class="btn btn-primary"><i class="fa fa-search"></i> Buscar</button>
					</form>
					

					<hr>

				<div class="panel panel-default">
					<div class="panel-heading">
						Clientes
					</div>

					<!-- /.panel-heading -->
					<div class="panel-body">
						<div class="table-responsive">
							<table class="table">
								<thead>
									<tr>
										<th>#</th>
										<th>Nombre</th>
										<th>Apellido</th>
										<th>Direccion</th>
										<th>Telefono</th>
										<th>Email</th>
										<th colspan="3" class="text-center">Acciones</th>
									</tr>
								</thead>
								<tbody>
									<% @clientes.each do |cliente| %>
									<tr>
										<td><%= cliente.id %></td>
										<td><%= cliente.nombre %></td>
										<td><%= cliente.apellido %></td>
										<td><%= cliente.direccion %></td>
										<td><%= cliente.telefono %></td>
										<td><%= cliente.email %></td>
										<td><%= link_to '<i class="fa fa-user fa-fw"></i> Mostrar'.html_safe, cliente %></td>
										<td><%= link_to '<i class="fa fa-edit fa-fw"></i> Editar'.html_safe, edit_cliente_path(cliente) %></td>
										<td><%= link_to '<i class="fa fa-remove fa-fw"></i> Eliminar'.html_safe, cliente, method: :delete, data: { confirm: 'Are you sure?' } %></td>
									</tr>
									<% end %>
								</tbody>
							</table>
						</div>
						<!-- /.table-responsive -->
					</div>
					<!-- /.panel-body -->
				</div>
				<!-- /.panel -->
			</div>
			<!-- /.col-lg-12 -->
		</div>
		<!-- /.row -->
	</div>
	<!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->
