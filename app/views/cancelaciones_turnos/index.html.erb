<%= render "partials/navigation" %>

<!-- Page Content -->
<div id="page-wrapper">
	<div class="container-fluid">
		<div class="row">
			<div class="col-lg-12">
				<h1 class="page-header">Listado de Cancelaciones de turnos fijos.</h1>

				<div class="panel panel-default">
					<div class="panel-heading">
						Cancelaciones
					</div>
					<div class="panel-body">
						<div class="table-responsive">
							<table class="table">
								<thead>
									<tr>
										<th>Cliente</th>
										<th>Cancha</th>
										<th>Fecha inicio</th>
										<th>Fecha fin</th>
										<th>Dia Cancelacion</th>
										<th colspan="3" class="text-center"">Acciones</th>
									</tr>
								</thead>
								<tbody>
									<% @cancelaciones.each do |cancelacion| %>
										<tr>
										<td><%= "#{cancelacion.turnos_fijo.cliente.nombre}, #{cancelacion.turnos_fijo.cliente.apellido} " %></td>
										<td><%= "#{cancelacion.turnos_fijo.cancha.TipoCancha.descripcion} - #{cancelacion.turnos_fijo.cancha.descripcion}" %></td>
										<td><%= cancelacion.turnos_fijo.hora_inicio.strftime("%d/%m/%Y - %H:%M") %></td>
										<td><%= cancelacion.turnos_fijo.hora_fin.strftime("%d/%m/%Y - %H:%M") %></td>
										<td><%= cancelacion.dia_cancelacion.strftime("%d/%m/%Y") %></td>
										<td><%= link_to '<i class="fa fa-user fa-fw"></i> Mostrar'.html_safe, cancelacion %></td>
										<td><%= link_to '<i class="fa fa-edit fa-fw"></i> Editar'.html_safe, edit_cancelaciones_turno_path(cancelacion) %></td>
										<td><%= link_to '<i class="fa fa-remove fa-fw"></i> Eliminar'.html_safe, cancelacion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
										
										</tr>
									<% end %>
								</tbody>
						</div>
					</div>
				</div>
			</div>
		</div>

